grep_bootconfig(){
        if [ ! -f /boot/config-`uname -r` ]; then
                echo "can't find boot config"
                exit 2
        fi

        cat /boot/config-`uname -r` | grep -E "$1=y|$1=m"
        [ $? -ne 0 ] && { echo "$1 is not set"; exit 1; }
}

check_acpi_dir() {
        [ ! -d /proc/acpi/$1 ] && { echo "/proc/acpi/$1 is not present "; exit 1; }
}

gen_internal_usbhub_file() {
        [ ! -e internal_usbhub ] && { lsusb | grep hub | awk '{print $6}' | sort -u > internal_usbhub; }
}

gen_internal_usbdev_file() {
        [ ! -e internal_usbdev ] && { lsusb | grep -v hub | awk '{print $6}' | sort -u > internal_usbdev; }
}
