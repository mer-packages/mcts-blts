<testdefinition version="1.0">
  <suite name="blts-opengles2-tests" domain="Graphics">
    <set name="gles2-smoke" feature="OpenGL">
      <case name="OpenGL-Enumerate%20GL%20extensions">
	<!-- description="Lists all GL extensions" -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Enumerate GL extensions.log" -en "OpenGL-Enumerate GL extensions"</step>
      </case>
      <case name="OpenGL-Enumerate%20EGL%20extensions">
	<!-- description="Lists all EGL extensions" -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Enumerate EGL extensions.log" -en "OpenGL-Enumerate EGL extensions"</step>
      </case>
      <case name="OpenGL-Enumerate%20EGL%20configs">
	<!-- description="Lists all EGL configurations" -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Enumerate EGL configs.log" -en "OpenGL-Enumerate EGL configs"</step>
      </case>
      <case name="OpenGL-Simple%20triangle">
	<!-- description="Draws simple three vertex rotating triangle" -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Simple triangle.log" -en "OpenGL-Simple triangle"</step>
      </case>
      <get>
	<file>"/var/log/tests/OpenGL-Enumerate GL extensions.log"</file>
	<file>"/var/log/tests/OpenGL-Enumerate EGL extensions.log"</file>
	<file>"/var/log/tests/OpenGL-Enumerate EGL configs.log"</file>
	<file>"/var/log/tests/OpenGL-Simple triangle.log"</file>
      </get>
    </set>


    <set name="performance" feature="OpenGL">
      <case name="OpenGL-Simple%20blit">
	<!-- description="Draw large textured planes" -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Simple blit.log" -en "OpenGL-Simple blit"</step>
      </case>
      <case name="OpenGL-Blit%20with%20blend">
	<!-- description="Draw large textured planes. Multiple layers with blend." -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Blit with blend.log" -en "OpenGL-Blit with blend"</step>
      </case>
      <case name="OpenGL-Blit%20with%20blend%20and%20widgets">
	<!-- description="Draw large textured planes. Multiple layers with blend. Draw 'widgets' on the topmost plane." -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Blit with blend and widgets.log" -en "OpenGL-Blit with blend and widgets"</step>
      </case>
      <case name="OpenGL-Blit%20with%20blend%20and%20widgets%20with%20shadows">
	<!-- description="Draw large textured planes. Multiple layers with blend. Draw 'widgets' on the topmost plane. Each widget has a shadow." -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Blit with blend and widgets with shadows.log" -en "OpenGL-Blit with blend and widgets with shadows"</step>
      </case>
      <case name="OpenGL-Blit%20with%20blend%20and%20widgets%20with%20shadows%20+%20particles">
	<!-- description="Draw large textured planes. Multiple layers with blend. Draw 'widgets' on the topmost plane. Each widget has a shadow. Add particles to each widget." -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Blit with blend and widgets with shadows + particles.log" -en "OpenGL-Blit with blend and widgets with shadows + particles"</step>
      </case>
      <case name="OpenGL-Blit%20with%20blend%20and%20widgets%20with%20shadows%20+%20particles%20+%20rotate">
	<!-- description="Draw large textured planes. Multiple layers with blend. Draw 'widgets' on the topmost plane. Each widget has a shadow. Add particles to each widget. Rotate the entire scene." -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Blit with blend and widgets with shadows + particles + rotate.log" -en "OpenGL-Blit with blend and widgets with shadows + particles + rotate"</step>
      </case>
      <case name="OpenGL-Blit%20with%20blend%20and%20widgets%20with%20shadows%20+%20particles%20+%20rotate%20+%20zoom">
	<!-- description="Draw large textured planes. Multiple layers with blend. Draw 'widgets' on the topmost plane. Each widget has a shadow. Add particles to each widget. Rotate and zoom the entire scene." -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Blit with blend and widgets with shadows + particles + rotate + zoom.log" -en "OpenGL-Blit with blend and widgets with shadows + particles + rotate + zoom"</step>
      </case>
      <case name="OpenGL-Blit%20with%20blend%20and%20widgets%20with%20shadows%20+%20particles%20+%20rotate%20+%20zoom%20and%20blur%20all">
	<!-- description="Draw large textured planes. Multiple layers with blend. Draw 'widgets' on the topmost plane. Each widget has a shadow. Add particles to each widget. Rotate and zoom the entire scene. Add blur." -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Blit with blend and widgets with shadows + particles + rotate + zoom and blur all.log" -en "OpenGL-Blit with blend and widgets with shadows + particles + rotate + zoom and blur all"</step>
      </case>
      <case name="OpenGL-Blit%20with%20blend%20and%20animated%20widgets%20with%20shadows">
	<!-- description="Draw large textured planes. Multiple layers with blend. Draw animated 'widgets' on the topmost plane. Each widget has a shadow." -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Blit with blend and animated widgets with shadows.log" -en "OpenGL-Blit with blend and animated widgets with shadows"</step>
      </case>
      <case name="OpenGL-Polygons-per-second">
	<!-- description="Synthetic test. Draws a one million triangle sphere." -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Polygons-per-second.log" -en "OpenGL-Polygons-per-second"</step>
      </case>
      <case name="OpenGL-Fillrate%20test">
	<!-- description="Synthetic test. Fills a plane with changing color." -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Fillrate test.log" -en "OpenGL-Fillrate test"</step>
      </case>
      <case name="OpenGL-Texels-per-second">
	<!-- description="Synthetic test. Fills a plane with big texture." -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Texels-per-second.log" -en "OpenGL-Texels-per-second"</step>
      </case>
      <case name="OpenGL-Fragment%20shader%20performance">
	<!-- description="Synthetic test. Calculates and draws a mandelbrot set with waves on fragment shader." -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Fragment shader performance.log" -en "OpenGL-Fragment shader performance"</step>
      </case>
      <case name="OpenGL-Vertex%20shader%20performance">
	<!-- description="Synthetic test. Uses a heavy algorithm to deform a plane to wavy ball." -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Vertex shader performance.log" -en "OpenGL-Vertex shader performance"</step>
      </case>
      <case name="OpenGL-Convolution%20filter">
	<!-- description="Configurable, generic convolution filter test." -->
        <step>/usr/bin/blts-opengles2-tests -l "/var/log/tests/OpenGL-Convolution filter.log" -en "OpenGL-Convolution filter"</step>
      </case>
      <get>
	<file>"/var/log/tests/OpenGL-Simple blit.log"</file>
	<file>"/var/log/tests/OpenGL-Blit with blend.log"</file>
	<file>"/var/log/tests/OpenGL-Blit with blend and widgets.log"</file>
	<file>"/var/log/tests/OpenGL-Blit with blend and widgets with shadows.log"</file>
	<file>"/var/log/tests/OpenGL-Blit with blend and widgets with shadows + particles.log"</file>
	<file>"/var/log/tests/OpenGL-Blit with blend and widgets with shadows + particles + rotate.log"</file>
	<file>"/var/log/tests/OpenGL-Blit with blend and widgets with shadows + particles + rotate + zoom.log"</file>
	<file>"/var/log/tests/OpenGL-Blit with blend and widgets with shadows + particles + rotate + zoom and blur all.log"</file>
	<file>"/var/log/tests/OpenGL-Blit with blend and animated widgets with shadows.log"</file>
	<file>"/var/log/tests/OpenGL-Polygons-per-second.log"</file>
	<file>"/var/log/tests/OpenGL-Fillrate test.log"</file>
	<file>"/var/log/tests/OpenGL-Texels-per-second.log"</file>
	<file>"/var/log/tests/OpenGL-Fragment shader performance.log"</file>
	<file>"/var/log/tests/OpenGL-Vertex shader performance.log"</file>
	<file>"/var/log/tests/OpenGL-Convolution filter.log"</file>
      </get>
    </set>
  </suite>
</testdefinition>

