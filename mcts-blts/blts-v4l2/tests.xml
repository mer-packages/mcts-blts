<testdefinition version="1.0">
  <suite name="blts-v4l2-tests" domain="Multimedia">
    <set name="camera-cases-basic" feature="Imaging and Video Adaptation">
      <case name="Core-Camera-Open device"
        type="Functional">
        <step>/usr/bin/blts-v4l2-tests -l /var/log/tests/Core-Camera-Open_device.log -en "Core-Camera-Open device"</step>
      </case>
      <case name="Core-Camera-Read device"
        type="Functional">
        <step>/usr/bin/blts-v4l2-tests -l /var/log/tests/Core-Camera-Read_device.log -en "Core-Camera-Read device"</step>
      </case>
      <case name="Core-Camera-Check device controls"
        type="Functional">
        <step>/usr/bin/blts-v4l2-tests -l /var/log/tests/Core-Camera-Check_device_controls.log -en "Core-Camera-Check device controls"</step>
      </case>
      <case name="Core-Camera-Check device capabilites"
