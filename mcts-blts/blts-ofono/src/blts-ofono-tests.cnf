# oFono test case configuration for parameters

[globals]
	default_pin "2648"
[end_globals]

[globals]
	default_pin2 "3579"
[end_globals]


######################
# General parameters #
######################

[parameter]
	name country_code
	const "+358"
[end_parameter]

[parameter]
	name remote_address
	const "1234567890"
[end_parameter]

[parameter]
	name old_pin
	const default_pin 
[end_parameter]

[parameter]
	name old_pin2
	const default_pin2 
[end_parameter]

[parameter]
	name new_pin
	const "2648"
[end_parameter]

####################
# Voice call cases #
####################

[test]
	name "oFono - Create voicecall"
	params country_code remote_address
[end_test]

[test]
	name "oFono - Create voicecall with hidden caller ID"
	params country_code remote_address
[end_test]

[test]
	name "oFono - Answer to voicecall and deflect"
	params country_code remote_address
[end_test]

##############
# DTMF cases #
##############

[parameter]
	name dtmf_length
	const 1 5
[end_parameter]

[parameter]
	name dtmf_chars
	const "1" "2" "3" "4" "5" "6" "7" "8" "9" "0" "*" "#"
[end_parameter]

[parameter]
	name dtmf_negative_chars
	const "A" "B" "C" "D" "E" "F"
[end_parameter]

[parameter]
	name dtmf_tones
	generate dtmf_generator dtmf_chars dtmf_length
[end_parameter]

[test]
	name "oFono - Call and send DTMF"
	params remote_address dtmf_tones
[end_test]

#############
# SMS cases #
#############

[parameter]
	name message_length
	const 0 1 80 159 160 161 1600
[end_parameter]

[parameter]
	name message_content_seed
	const "Test"
[end_parameter]

[parameter]
	name sms_message
	generate message_generator message_content_seed message_length
[end_parameter]

[parameter]
	name SMSC
	const "+000123456789"
[end_parameter]

[test]
	name "oFono - Send SMS"
	params sms_message country_code remote_address SMSC
[end_test]

[test]
	name "oFono - Receive SMS"
	params SMSC
[end_test]

#############
# SIM cases #
#############

[parameter]
	name pin_type
	const "pin" "pin2"
[end_parameter]

[parameter]
	name puk_code
	const "13243546"
[end_parameter]

[test]
	name "oFono - Change PIN"
	params old_pin new_pin pin_type
[end_test]

[test]
	name "oFono - Enter PIN"
	params old_pin new_pin pin_type
[end_test]

[test]
	name "oFono - Reset PIN"
	params old_pin new_pin pin_type
[end_test]

#########################
# Call forwarding cases #
#########################

[parameter]
	name call_forwarding_keepalive
	const "1" "15" "30"
[end_parameter]

[parameter]
	name forward_address
	const "9876543210"
[end_parameter]

[parameter]
	name disable_forwarding
	const "" "all" "conditional"
[end_parameter]

[test]
	name "oFono - Disable forwardings"
	params disable_forwarding
[end_test]

[test]
	name "oFono - Unconditional forwarding"
	params forward_address
[end_test]

[test]
	name "oFono - Forward if busy"
	params remote_address forward_address call_forwarding_keepalive
[end_test]

[test]
	name "oFono - Forward if no reply"
	params forward_address
[end_test]

[test]
	name "oFono - Forward if not reachable"
	params forward_address
[end_test]


######################
# Call barring cases #
######################

[test]
	name "oFono - Change password for barrings"
	params old_pin2 new_pin
[end_test]

[test]
	name "oFono - Disable barrings"
	params old_pin2 new_pin
[end_test]

[test]
	name "oFono - Call barrings test"
	params old_pin2 new_pin
[end_test]

[test]
	name "oFono - Check barring properties"
	params old_pin2 new_pin
[end_test]

[test]
	name "oFono - Disable incoming barrings"
	params old_pin2 new_pin
[end_test]

[test]
	name "oFono - Disable outgoing barrings"
	params old_pin2 new_pin
[end_test]
	
####################
# Call meter cases #
####################

[parameter]
	name call_meter_max
	const "0" "10" "5000000"
[end_parameter]

[parameter]
	name price_per_unit
	const "0.00001" "1" "5000000"
[end_parameter]

[parameter]
	name currency
	const "FIM" "EUR" "XX"
[end_parameter]

[test]
	name "oFono - Call meters set"
	params call_meter_max price_per_unit currency
[end_test]

[test]
	name "oFono - Call meters reset"
	params remote_address old_pin
[end_test]

[test]
	name "oFono - Call meters near max warning"
	params remote_address old_pin
[end_test]

################
# Volume cases #
################

[parameter]
	name volume
	const "null" "0" "50" "100"
[end_parameter]

[test]
	name "oFono - Set microphone volume"
	params volume
[end_test]

[test]
	name "oFono - Set speaker volume"
	params volume
[end_test]
